{% extends "base.twig" %}

{% block content %}
	<main id="show">
        <div class="show-header">
            <div class="bg-image"></div>
            <!--<div class="show-navigation">
                <a href="#" class="prev button inverse">Previous</a>
                <a href="#" class="next button inverse">Next</a>
            </div>-->
            <div class="content grid wrapper">
                <div class="eight column">
                    <h5 class="color-rose-purple">{{ post.get_field('show_type') }}</h5>
                    <h2 class="color-bloom-red">{{ post.title }}</h2>
                    <p class="meta">{{ post.get_field('start_date') }} - {{ post.get_field('end_date') }}</p>
                    <p class="meta">{{ post.get_field('venue') }} {% if post.get_field('reserved') %}(Reserved Seating){% endif %}</p>
                    <hr class="dash" />
                </div>
                <div class="four column">
                    <a href="#" class="button">Buy Tickets</a>
                </div>
            </div>
        </div>

        <div class="show-content grid wrapper">

            <div class="seven column dynamic-content">
            {{ post.get_field('show_information') }}
            </div>

            <div class="one column"></div>

            <div class="four column">

                <h4>Ticket Information</h4>

                {{ post.get_field('ticket_information') }}

            </div>
        </div>

        <a class="photo-gallery" href="#">
            <header class="bg-bloom-red">
                <h3 class="color-white">
                Photo Gallery
                </h3>
            </header>
            <span><h2>View &rarr;</h2></span>
            <div class="grid">
                <div class="four column"></div>
                <div class="four column"></div>
                <div class="four column"></div>
            </div>
        </a>

        

        <div style="display: none; ">
            {% set gallery = post.get_field('photo_gallery') %}
            {% for image in gallery %}
            <img src="{{ image.sizes.large }}" />
            {% endfor %}
        </div>
        
        {% set castList = post.get_field('cast_list') %} 
        {% set wheelchair = post.get_field('wheelchair') %}
        {% set assistive = post.get_field('assistive') %}
        {% set audio = post.get_field('audio') %}

        {% if ( castList or wheelchair or assistive or audio ) %}
        <div class="grid wrapper pad-xl">
            <div class="eight column dynamic-content">
                    <h3 class="color-rose-purple mar-b-md">Cast List</h3>
                    <dl>
                    {% for role in castList %}
                        <dt>{{ role.position }}</dt> 
                        <dd>{{ role.name }}</dd>
                    {% endfor %}
                    </dl>
            </div>

           {% if ( wheelchair or assistive or audio ) %}

            <div class="four column dynamic-content">  
                <h3>Accessibility Information</h3>

                <ul>
                    {% if wheelchair %}<li>{{ wheelchair }}</li> {% endif %}
                    {% if assistive %}<li>{{ assistive }}</li> {% endif %}
                    {% if audio %}<li>{{ audio }}</li> {% endif %}
                </ul>
            </div>

            {% endif %}
        </div>
        {% endif %}

        <div class="grid promos">
       
        <a class="six column promo" href="#">
            <header>
                <p class="eyebrow">Prev:</p>
                <h3 class="title">The Whipping Man</h3>
            </header>
            <div class="promo-bg" style="background-image: url({{ theme.link }}/images/shows/the_whipping_man.jpg);"></div>
        </a>

        <a class="six column promo" href="#">
            <header style="position: absolute; right: 0; text-align: right;">
                <p class="eyebrow">Next:</p>
                <h3 class="title">A Piece of My Heart</h3>
            </header>
            <div class="promo-bg"  style="background-image: url({{ theme.link }}/images/shows/a_piece_of_my_heart.jpg);"></div>
        </a>

        </div>
    </main>
{% endblock %}