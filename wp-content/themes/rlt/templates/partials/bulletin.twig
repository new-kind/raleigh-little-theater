 <div class="grid bulletin">

        {% set CTAs = post.get_field('ctas') %}

        {% for item in CTAs %}


            {% if loop.first %}
                <div class="primary bg-{{ ctaColors.primary }}">
            {% else %}
                <div class="secondary bg-{{ ctaColors.secondary }}">
            {% endif %}
        

                <header>
                    <p class="eyebrow">{{ item.label}}</p>
                    <h2 class="title quote">{{ item.text }}</h2>
                </header>

                {#<div class="buttons centered">#}
                    <a href="{{ item.link }}" class="inverse button ">{{ item.button_text }}</a>
                {#</div>#}

            </div>

        {% endfor %}

        {% set feed = post.get_field('list_item') %}
        {% if feed %}
            <div class="feed">
            <header>
                <p class="eyebrow has-squiggle"><span class="bg-cool-grey">Links &amp; Resources</span></p>
            </header>
        {% endif %}
        {% for item in feed %}

            <article>
                <h6 class="title"><a href="{{ item.link }}">{{ item.link_text }}</a></h6>
                <p>{{ item.summary }}</p>
            </article>

        {% endfor %}
            </div>


