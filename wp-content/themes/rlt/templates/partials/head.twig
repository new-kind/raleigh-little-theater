    <meta charset="{{site.charset}}" />

    {# set title variable #}
    {% if wp_title %}
        {% set metaTitle = wp_title ~ " - " ~ site.name %}
    {% else %}
        {% set metaTitle = site.name %}
    {% endif %}

    <title>{{ metaTitle }}</title>
    <meta property="og:title" content="{{ metaTitle }}" />

    <meta name="description" content="{{ site.description }}" />
    <meta property="og:description" content="{{ site.description }}" />

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="pingback" href="{{site.pingback_url}}" />
    
    <link rel="stylesheet" href="{{ theme.link }}/styles/css/chosen.css?a" />
    <link rel="stylesheet" href="{{ theme.link }}/styles/css/fotorama.css" />
    <link rel="stylesheet" href="{{ theme.link }}/styles/css/screen.css?{{ "now"| date("U") }}" />
    
    <link rel="icon" href="{{ theme.link }}/assets/favicon.png" />

    <script data-main="{{ theme.link }}/scripts/js/config.js?{{ "now"| date("U") }}" src="{{ theme.link }}/scripts/js/require.js"></script>
    {{function('wp_head')}}

    {% if site.url == "http://raleighlittletheatre.org" %}
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39937920-1', 'auto');
      ga('send', 'pageview');

    </script>
    {% endif %}
