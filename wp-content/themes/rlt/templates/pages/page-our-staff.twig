        </div>
    </section>

    <section class="Members">
        <h5 class="staff-titles text centered" >Members At Large</h5>
            <div class="list with-members">
            {% for person in large %}
            <a class="list-item" href="{{ person.link }}">
                <div class="image" style="background-image: url( {{ person.get_field('headshot').sizes.medium }});"></div>
                <div class="content">
